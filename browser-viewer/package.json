{
  "name": "browser-viewer",
  "displayName": "Browser Viewer",
  "description": "Multi-terminal browser viewer for Playwright with isolated X11 displays",
  "version": "1.0.0",
  "publisher": "local",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "browserViewer",
          "title": "Browser",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "browserViewer": [
        {
          "type": "webview",
          "id": "browserViewer.view",
          "name": "Browser Terminals",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "browserViewer.createTerminal",
        "title": "Create Browser Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "browserViewer.showViewer",
        "title": "Show Browser Viewer for Active Terminal"
      },
      {
        "command": "browserViewer.refresh",
        "title": "Refresh Browser View",
        "icon": "$(refresh)"
      }
    ],
    "configuration": {
      "title": "Browser Viewer",
      "properties": {
        "browserViewer.baseDisplayNumber": {
          "type": "number",
          "default": 99,
          "description": "Starting X11 display number for terminal isolation"
        },
        "browserViewer.baseWebsocketPort": {
          "type": "number",
          "default": 6080,
          "description": "Starting WebSocket port for noVNC connections"
        },
        "browserViewer.autoCreateViewer": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create viewer panel when creating browser terminal"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "files": [
    "out/**/*",
    "media/**/*"
  ],
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
